<%-include('header')-%>


    <div class="text-center  center-div text-light" id="login">
        <div class="container w-25 border py-5 bg-dark ">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System</h2>
                <span></span>
                <% if(locals.logout){%>
                    <div class="alert alert-success text-center mt-2">
                        <%=logout %>
                    </div>
                    <%}%>
                        <% if(locals.invalidUser){%>
                            <div class="alert alert-danger text-center">
                                <%=invalidUser %>
                            </div>
                            <%}%>
                            
            </div>
            <form action="/route/login" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" name="email" required>
                    <small class="form-text text-left text-muted ">Register email address</small>
                </div>
                <div class="form-group mt-2">
                     <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-success  mt-2">Submit</button>
            </form>
        </div>
    </div>
    <%-include('footer')-%>